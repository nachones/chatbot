# =============================================
# MIABOT - Archivo de Configuración
# =============================================
# Copia este archivo a .env y configura tus valores

# Puerto del servidor (por defecto 3000)
PORT=3000

# Entorno: development | production
NODE_ENV=development

# =============================================
# PROVEEDORES DE LLM (al menos uno requerido)
# =============================================

# OpenAI (https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-your-openai-key-here

# Groq - Alternativa gratuita y rápida (https://console.groq.com/keys)
GROQ_API_KEY=gsk_your-groq-key-here

# Google Gemini - Potente y con capa gratuita (https://aistudio.google.com/apikey)
GEMINI_API_KEY=your-gemini-key-here

# =============================================
# CONFIGURACIÓN DEL LLM
# =============================================

# Proveedor por defecto: openai | groq | gemini
DEFAULT_LLM_PROVIDER=gemini

# Modelo por defecto para OpenAI
DEFAULT_OPENAI_MODEL=gpt-4o-mini

# Modelo por defecto para Groq
DEFAULT_GROQ_MODEL=llama-3.3-70b-versatile

# Modelo por defecto para Gemini
DEFAULT_GEMINI_MODEL=gemini-2.0-flash

# Configuración del modelo
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=1000

# =============================================
# CONFIGURACIÓN OPCIONAL
# =============================================

# Límite de requests por IP (por 15 minutos)
RATE_LIMIT=100

# Límites de Archivos
MAX_FILE_SIZE=10485760

# Habilitar logs detallados
DEBUG=false
